{
  "name": "cvxjs",
  "version": "0.1.4",
  "description": "Disciplined Convex Programming in TypeScript",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "wasm/pkg"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "build:wasm": "cd wasm && ./build.sh",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"examples/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"examples/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "example:basic": "npx tsx examples/basic.ts",
    "example:lasso": "npx tsx examples/lasso.ts",
    "example:least-squares": "npx tsx examples/least-squares.ts",
    "example:portfolio": "npx tsx examples/portfolio.ts",
    "example:entropy": "npx tsx examples/entropy.ts",
    "example:power": "npx tsx examples/power.ts",
    "extract-simba": "npx tsx scripts/extract-simba-data.ts",
    "build:demo": "vite build --config vite.demo.config.js",
    "dev:circuit": "vite dev --config vite.circuit-demo.config.js",
    "build:circuit-demo": "vite build --config vite.circuit-demo.config.js",
    "test:browser": "npx serve -l 3000 .",
    "verify-pack": "bash scripts/verify-pack.sh",
    "prepublishOnly": "npm run build && npm run test:run && npm run verify-pack"
  },
  "dependencies": {
    "clarabel-wasm": "file:./wasm/pkg/bundler",
    "clarabel-wasm-nodejs": "file:./wasm/pkg/nodejs",
    "highs": "^1.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.10.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.49.0",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^1.2.0",
    "xlsx": "^0.18.5"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SteveDiamond/cvxjs.git"
  },
  "bugs": {
    "url": "https://github.com/SteveDiamond/cvxjs/issues"
  },
  "homepage": "https://github.com/SteveDiamond/cvxjs#readme",
  "keywords": [
    "convex",
    "optimization",
    "dcp",
    "cvxpy",
    "clarabel",
    "mathematical-programming",
    "linear-programming",
    "quadratic-programming",
    "socp"
  ],
  "author": "Steven Diamond <steven@optimalintellect.com>",
  "license": "Apache-2.0"
}
